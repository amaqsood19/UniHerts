<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1">


    <Button
        android:id="@+id/student_id_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="47dp"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/student_id_card_icon"
        android:onClick="openID"
        android:text="Student ID"
        android:textAlignment="center" />

    <Button
        android:id="@+id/map_id_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/student_id_button"
        android:layout_marginEnd="60dp"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/maps_icon"
        android:onClick="openMap"
        android:text="Map"
        android:textAlignment="center" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/student_id_button"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/food_icon"
        android:onClick="openFood"
        android:text="Food"
        android:textAlignment="center" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/map_id_button"
        android:layout_alignTop="@+id/button4"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/facebook_news"
        android:onClick="openNews"
        android:text="News"
        android:textAlignment="center" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button4"
        android:layout_below="@+id/button4"
        android:layout_marginTop="46dp"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/parking_map_icon"
        android:onClick="openParkingMap"
        android:text="Parkings"
        android:textAlignment="center" />


</RelativeLayout>