<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/student_id_card_icon"
        android:text="Student ID"
        android:background="@android:color/transparent"
        android:textAlignment="center"
        android:id="@+id/student_id_button"
        android:layout_marginStart="60dp"
        android:layout_marginTop="47dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:onClick="openID" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/maps_icon"
        android:text="Map"
        android:background="@android:color/transparent"
        android:textAlignment="center"
        android:id="@+id/map_id_button"
        android:layout_alignTop="@+id/student_id_button"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="60dp"
        android:onClick="openMap" />


</RelativeLayout>