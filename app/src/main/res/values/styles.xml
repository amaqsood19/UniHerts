<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Base.Theme.AppCompat" />

    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDarker</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <color name="primary">#457C50</color>
    <color name="primaryDarker">#580C0C</color>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="Widget" />

    <style name="Widget.SampleMessage">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <style name="Widget.SampleMessageTile">
        <item name="android:background">@drawable/tile</item>
        <item name="android:shadowColor">#7F000000</item>
        <item name="android:shadowDy">-3.5</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="Theme.Uniherts" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_uniherts</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Uniherts</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Uniherts</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Uniherts</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Uniherts</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Uniherts</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_uniherts</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_uniherts
        </item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Uniherts
        </item>


    </style>

    <style name="ActionBar.Solid.Uniherts" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_uniherts</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_uniherts</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_uniherts</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Uniherts</item>
    </style>

    <style name="ActionBar.Transparent.Uniherts" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_uniherts</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Uniherts</item>
    </style>

    <style name="PopupMenu.Uniherts" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_uniherts</item>
    </style>

    <style name="DropDownListView.Uniherts" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_uniherts</item>
    </style>

    <style name="ActionBarTabStyle.Uniherts" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_uniherts</item>
    </style>

    <style name="DropDownNav.Uniherts" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_uniherts</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_uniherts</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_uniherts</item>
    </style>

    <style name="ProgressBar.Uniherts" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_uniherts</item>
    </style>

    <style name="ActionButton.CloseMode.Uniherts" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_uniherts</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Uniherts.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Uniherts</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Uniherts</item>
    </style>

    <style name="ButtonBarButton" />


</resources>